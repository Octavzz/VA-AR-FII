<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:cview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/transparent">

    <androidx.cardview.widget.CardView
        android:id="@+id/calendarCardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        cview:cardCornerRadius="10dp"
        cview:cardElevation="5dp"
        cview:cardBackgroundColor="@color/backgroundBlue"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal"
            android:padding="10dp">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".3"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal"
                    >

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginEnd="5dp"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:src="@drawable/baseline_schedule_black_18dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/sched_hours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="interval orar"
                        android:layout_gravity="center_vertical"
                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5dp"
                        android:src="@drawable/baseline_supervisor_account_black_18dp"
                        android:layout_gravity="center_vertical"/>

                    <TextView
                        android:id="@+id/sched_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="grupa"
                        android:layout_gravity="center_vertical"/>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/sched_course"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight=".7"
                android:text="cursul"
                android:gravity="end"
                android:textSize="16dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>